{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://ndinsight.com/schemas/mon-call.schema.json",
  "title": "SINTRAN III Monitor Call",
  "description": "Schema for SINTRAN III Monitor Call YAML files (Cleaned up version)",
  "type": "object",
  "required": [
    "octal",
    "name",
    "description",
    "compatibility",
    "source"
  ],
  "properties": {
    "octal": {
      "type": "string",
      "pattern": "^[0-7]+B$",
      "description": "Octal number of the monitor call with 'B' suffix"
    },
    "name": {
      "type": "string",
      "pattern": "^[A-Z][A-Za-z0-9]*$",
      "description": "Primary name of the monitor call"
    },
    "short_names": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Assembly language mnemonics (e.g., DXABS, EXPFI, LEAVE)"
    },
    "description": {
      "type": "string",
      "minLength": 10,
      "description": "Detailed description of the monitor call"
    },
    "notes": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Additional notes and warnings (optional, rarely used)"
    },
    "see_also": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Related monitor calls and commands"
    },
    "parameters": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "type", "io", "description"],
        "properties": {
          "name": {
            "type": "string",
            "description": "Parameter name"
          },
          "type": {
            "type": "string",
            "description": "Parameter data type (note: many are UNKNOWN due to extraction limitations)"
          },
          "io": {
            "type": "string",
            "enum": ["I", "O", "IO"],
            "description": "Input/Output direction"
          },
          "description": {
            "type": "string",
            "description": "Parameter description"
          },
          "size": {
            "type": "integer",
            "minimum": 1,
            "description": "Size in bytes/characters"
          },
          "implicit": {
            "type": "boolean",
            "description": "Whether this is an implicit return value"
          }
        }
      },
      "description": "Ordered list of parameters"
    },
    "examples": {
      "type": "object",
      "properties": {
        "pascal": {
          "$ref": "#/definitions/languageExample"
        },
        "cobol": {
          "$ref": "#/definitions/languageExample"
        },
        "fortran": {
          "$ref": "#/definitions/languageExample"
        },
        "planc": {
          "$ref": "#/definitions/languageExample"
        },
        "assembly_500": {
          "type": "object",
          "required": ["available", "code"],
          "properties": {
            "available": {
              "type": "boolean"
            },
            "code": {
              "type": "string"
            },
            "octal_definition": {
              "type": "string",
              "pattern": "^37B9 \\+ [0-7]+B$"
            },
            "notes": {
              "type": "string"
            }
          }
        },
        "mac": {
          "type": "object",
          "required": ["available", "code"],
          "properties": {
            "available": {
              "type": "boolean"
            },
            "code": {
              "type": "string"
            },
            "mon_number": {
              "type": "integer",
              "minimum": 0
            },
            "notes": {
              "type": "string"
            }
          }
        }
      },
      "description": "Code examples in various languages"
    },
    "compatibility": {
      "type": "object",
      "required": ["nd100", "nd500", "user_programs", "rt_programs", "system_programs"],
      "properties": {
        "nd100": {
          "type": "boolean",
          "description": "Compatible with ND-100 platform"
        },
        "nd500": {
          "type": "boolean",
          "description": "Compatible with ND-500 platform"
        },
        "user_programs": {
          "type": "boolean",
          "description": "Can be called from user programs"
        },
        "rt_programs": {
          "type": "boolean",
          "description": "Can be called from RT (real-time) programs"
        },
        "system_programs": {
          "type": "boolean",
          "description": "Can be called from system programs"
        }
      },
      "description": "Platform and usage compatibility (simplified boolean flags)"
    },
    "source": {
      "type": "object",
      "required": ["document"],
      "properties": {
        "document": {
          "type": "string",
          "description": "Source document identifier"
        },
        "page": {
          "type": "integer",
          "minimum": 1,
          "description": "Page number in source document"
        },
        "line": {
          "type": "integer",
          "minimum": 1,
          "description": "Line number in extracted markdown"
        },
        "page_references": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Additional page references"
        },
        "scan_date": {
          "type": "string",
          "description": "Date the document was scanned"
        },
        "scanned_by": {
          "type": "string",
          "description": "Person/organization who scanned the document"
        }
      },
      "description": "Source document metadata"
    },
    "extraction": {
      "type": "object",
      "properties": {
        "date": {
          "type": "string",
          "format": "date",
          "description": "Date of extraction"
        },
        "version": {
          "type": "string",
          "description": "Version of extraction process"
        },
        "validated": {
          "type": "boolean",
          "description": "Whether the extraction has been validated"
        },
        "ocr_corrected": {
          "type": "boolean",
          "description": "Whether the header was missing/corrupted and corrected"
        },
        "ocr_notes": {
          "type": "string",
          "description": "Notes about OCR corrections or extraction issues"
        }
      },
      "description": "Extraction process metadata"
    }
  },
  "definitions": {
    "languageExample": {
      "type": "object",
      "required": ["available", "code"],
      "properties": {
        "available": {
          "type": "boolean",
          "description": "Whether this language example is available"
        },
        "code": {
          "type": "string",
          "description": "Source code example"
        },
        "notes": {
          "type": "string",
          "description": "Additional notes about this example"
        }
      }
    }
  }
}
